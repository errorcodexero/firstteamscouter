<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@android:style/Theme.Holo.Light.DarkActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:background="@android:color/black">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Export Data"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="24sp"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">

            <Button
                android:id="@+id/btnExportDataXML"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/label_export_to_xml"
                android:layout_weight="0.33"
                android:textSize="20sp"
                android:background="@drawable/custom_btn_shakespeare"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp" />

            <Button
                android:id="@+id/btnExportDataBluetooth"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/label_bluetooth_export"
                android:layout_weight="0.34"
                android:textSize="20sp"
                android:background="@drawable/custom_btn_shakespeare"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp" />

            <Button
                android:id="@+id/btnRepeatDataExport"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/lbl_repeat_data_export"
                android:layout_weight="0.33"
                android:textSize="20sp"
                android:singleLine="false"
                android:background="@drawable/custom_btn_shakespeare"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

        </LinearLayout>

        <TextView
            android:layout_width="700dp"
            android:layout_height="200dp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:text="@string/text_export_status"
            android:id="@+id/txtDataExportStatus"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="left"
            android:textColor="@android:color/white" />

</LinearLayout>
