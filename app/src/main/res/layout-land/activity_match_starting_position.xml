<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:id="@+id/StartingPosition_LayoutLinear"
    android:background="@android:color/black">

    <RelativeLayout
        android:layout_width="@dimen/field_width"
        android:layout_height="@dimen/field_height"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/starting_position_background_2015"
        android:id="@+id/StartingPosition_Field_LayoutRelative"
        android:layout_marginLeft="100dp">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:id="@+id/StartingPosition_RobotGutter_RelativeLayout"
        android:layout_marginLeft="25dp"
        android:background="#ffe8e8e8">

        <ImageView
            android:layout_width="@dimen/robot_width"
            android:layout_height="@dimen/robot_height"
            android:id="@+id/imgRobot"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/robot_50x50"
            android:contentDescription="Robot"
            android:layout_marginTop="50dp"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="false"
            android:layout_marginLeft="25dp"
            android:layout_alignParentLeft="false"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/StartingPosition_ButtonGutter_LinearLayout"
        android:layout_marginLeft="25dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:id="@+id/txtStartTeamNumber"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/white"
            android:text="@string/label_team_number"
            android:textSize="36sp"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:id="@+id/robotX_TextView"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:id="@+id/robotY_TextView"
            android:textColor="@android:color/white" />

        <Button
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:text="@string/label_start_match"
            android:id="@+id/btnSubmitStartingPosition"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_btn_shakespeare" />

    </LinearLayout>

</LinearLayout>
