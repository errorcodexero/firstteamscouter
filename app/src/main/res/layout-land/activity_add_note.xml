<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="fill_horizontal"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".TeamInformationActivity"
    android:background="@android:color/black">

    <TextView
        android:id="@+id/lblAddNoteForTeam"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal"
        android:text="@string/label_add_note_for_team"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/etNewNote"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.75"
            android:background="@drawable/edittext_bg"
            android:hint="@string/hint_new_note"
            android:gravity="top|left|fill_horizontal"
            android:inputType="textMultiLine"
            android:minLines="12" />

        <Button
            android:id="@+id/btnNoteSave"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/label_save"
            android:background="@drawable/custom_btn_shakespeare"
            android:textSize="30sp"
            android:textStyle="bold" />

</LinearLayout>