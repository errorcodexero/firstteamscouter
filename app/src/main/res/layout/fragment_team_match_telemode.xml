<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gridTeleModeLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/field_800x367_red_on_left"
    android:columnCount="17"
    android:orientation="horizontal"
    android:rowCount="15" >

    <Space
        android:layout_width="80dp"
        android:layout_column="1" />

    <Space
        android:layout_width="80dp"
        android:layout_column="7" />

    <Space
        android:layout_width="80dp"
        android:layout_column="13" />

    <Space
        android:layout_height="40dp"
        android:layout_row="9" />

    <TextView
        android:id="@+id/lblTeleScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_columnSpan="3"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_row="0"
        android:gravity="left|center_vertical"
        android:text="@string/label_tele_score"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txtTeleScore"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_column="5"
        android:layout_columnSpan="2"
        android:layout_gravity="right|top"
        android:layout_marginTop="5dp"
        android:layout_row="0"
        android:gravity="left|center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txtTeleStat"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_column="7"
        android:layout_columnSpan="3"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_row="0"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/lblTelePossess"
        android:layout_column="4"
        android:layout_columnSpan="1"
        android:layout_gravity="right|center_vertical"
        android:layout_row="3"
        android:layout_rowSpan="1"
        android:text="@string/label_possess"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/lblTeleDefend"
        android:layout_column="4"
        android:layout_columnSpan="1"
        android:layout_gravity="right|center_vertical"
        android:layout_row="6"
        android:layout_rowSpan="2"
        android:text="@string/label_defend"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btnTeleLoScore"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_marginLeft="4dp"
        android:layout_row="10"
        android:layout_rowSpan="1"
        android:background="@android:drawable/btn_default"
        android:text="@string/text_button_lo_score"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#0000FF" />

    <Button
        android:id="@+id/btnTeleHiScore"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="5dp"
        android:layout_row="0"
        android:layout_rowSpan="1"
        android:background="@android:drawable/btn_default"
        android:text="@string/text_button_hi_score"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#0000FF" />

    <Button
        android:id="@+id/btnTeleHiMiss"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="2"
        android:layout_rowSpan="2"
        android:background="@android:drawable/btn_default"
        android:text="@string/text_button_hi_miss"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#0000FF" />

    <Button
        android:id="@+id/btnTeleLoMiss"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="6"
        android:layout_rowSpan="2"
        android:background="@android:drawable/btn_default"
        android:text="@string/text_button_lo_miss"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#0000FF" />

    <Button
        android:id="@+id/btnTrussToss"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_column="5"
        android:layout_gravity="left|top"
        android:layout_row="10"
        android:background="@android:drawable/btn_default"
        android:text="@string/text_button_truss_toss"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#0000FF" />

    <Button
        android:id="@+id/btnTrussMiss"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_column="6"
        android:layout_gravity="left|top"
        android:layout_row="10"
        android:background="@android:drawable/btn_default"
        android:text="@string/text_button_truss_miss"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#0000FF" />

    <Button
        android:id="@+id/btnTossCaught"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_column="7"
        android:layout_gravity="left|top"
        android:layout_row="10"
        android:background="@android:drawable/btn_default"
        android:text="@string/text_button_catch_caught"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#0000FF" />

    <Button
        android:id="@+id/btnTossMiss"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_column="8"
        android:layout_gravity="left|top"
        android:layout_row="10"
        android:background="@android:drawable/btn_default"
        android:text="@string/text_button_catch_miss"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#0000FF" />

    <Button
        android:id="@+id/btnPossessBlueZone"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_column="8"
        android:layout_columnSpan="2"
        android:layout_gravity="center"
        android:layout_row="3"
        android:layout_rowSpan="2"
        android:background="@android:drawable/btn_default"
        android:text="@string/text_button_blue"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#0000FF" />

    <Button
        android:id="@+id/btnDefendBlueZone"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_column="8"
        android:layout_columnSpan="2"
        android:layout_gravity="center"
        android:layout_row="6"
        android:layout_rowSpan="2"
        android:background="@android:drawable/btn_default"
        android:text="@string/text_button_blue"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#0000FF" />

    <Button
        android:id="@+id/btnPossessWhiteZone"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_column="6"
        android:layout_columnSpan="2"
        android:layout_gravity="center"
        android:layout_row="3"
        android:layout_rowSpan="2"
        android:background="@android:drawable/btn_default"
        android:text="@string/text_button_white"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#0000FF" />

    <Button
        android:id="@+id/btnDefendWhiteZone"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_column="6"
        android:layout_columnSpan="2"
        android:layout_gravity="center"
        android:layout_row="6"
        android:layout_rowSpan="2"
        android:background="@android:drawable/btn_default"
        android:text="@string/text_button_white"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#0000FF" />

    <Button
        android:id="@+id/btnPossessRedZone"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_column="5"
        android:layout_gravity="center"
        android:layout_row="3"
        android:layout_rowSpan="2"
        android:background="@android:drawable/btn_default"
        android:text="@string/text_button_red"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#0000FF" />

    <Button
        android:id="@+id/btnDefendRedZone"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_column="5"
        android:layout_gravity="center"
        android:layout_row="6"
        android:layout_rowSpan="2"
        android:background="@android:drawable/btn_default"
        android:text="@string/text_button_red"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#0000FF" />

    <Button
        android:id="@+id/btnDefendGoalZone"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_column="11"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_row="6"
        android:layout_rowSpan="2"
        android:background="@android:drawable/btn_default"
        android:text="@string/text_button_goalie"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#0000FF" />

    <Space
        android:layout_height="50dp"
        android:layout_column="1"
        android:layout_row="5" />

    <Switch
        android:id="@+id/switchUndo"
        android:layout_column="9"
        android:layout_columnSpan="3"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_row="0"
        android:text="@string/text_button_Undo" />

    <Button
        android:id="@+id/btnTeleLongPass"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="10"
        android:background="@android:drawable/btn_default"
        android:text="@string/text_button_long_pass"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#0000FF" />

    <Button
        android:id="@+id/btnTeleLongPassMiss"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_column="4"
        android:layout_gravity="left|top"
        android:layout_row="10"
        android:background="@android:drawable/btn_default"
        android:text="@string/text_button_long_pass_miss"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#0000FF" />

    <Button
        android:id="@+id/btnTeleShortPass"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_column="10"
        android:layout_columnSpan="1"
        android:layout_gravity="left"
        android:layout_row="10"
        android:background="@android:drawable/btn_default"
        android:text="@string/text_button_short_pass"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#0000FF" />

    <Button
        android:id="@+id/btnTeleShortPassMiss"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_column="11"
        android:layout_columnSpan="2"
        android:layout_gravity="left"
        android:layout_row="10"
        android:background="@android:drawable/btn_default"
        android:text="@string/text_button_short_pass_miss"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#0000FF" />

</GridLayout>